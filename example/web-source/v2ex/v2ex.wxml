<view class="page">
    <view class="page__bd">
        <view class="weui-tab">


            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>

            <view class="weui-tab__panel">

{{/*--------------------------------------------------------------------------------------------*/}}
                    <view class="weui-panel" hidden="{{activeIndex != 0}}" >

                    <view wx:for-index="itemIndex"  wx:for="{{contentHot}}">

                        <view class="weui-panel__hd">
                            V2EX-最热主题
                        </view>

                        <view class="weui-panel__bd">
                            <view class="weui-media-box weui-media-box_text">
                                <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
                                <view class="weui-media-box__desc">
                                    {{item.content}}
                                </view>
                                <view class="weui-media-box__info">
                                    <view class="weui-media-box__info__meta">{{item.author}}</view>
                                    <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.date}}</view>
                                </view>
                            </view>
                        </view>

                        <view class="weui-panel__ft">
                            <view class="weui-cell weui-cell_access weui-cell_link">
                                <view class="weui-cell__bd">查看更多</view>
                                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                            </view>
                        </view>
                    </view>
                    </view>


{{/*--------------------------------------------------------------------------------------------*/}}
                <view class="weui-panel" hidden="{{activeIndex != 1}}" >

                <view wx:for-index="itemIndex"  wx:for="{{contentLatest}}">

                    <view class="weui-panel__hd">
                        V2EX-最新主题
                    </view>

                    <view class="weui-panel__bd">
                        <view class="weui-media-box weui-media-box_text">
                            <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
                            <view class="weui-media-box__desc">
                                {{item.content}}
                            </view>
                            <view class="weui-media-box__info">
                                <view class="weui-media-box__info__meta">{{item.date}}</view>
                                <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.author}}</view>
                            </view>
                        </view>
                    </view>

                    <view class="weui-panel__ft">
                        <view class="weui-cell weui-cell_access weui-cell_link">
                            <view class="weui-cell__bd">查看更多</view>
                            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                        </view>
                    </view>
                </view>
                </view>

{{/*--------------------------------------------------------------------------------------------*/}}



            </view>
        </view>
    </view>
</view>